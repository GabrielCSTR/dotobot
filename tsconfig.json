{
	"compilerOptions": {
		"outDir": "dist",
		"removeComments": true,
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
